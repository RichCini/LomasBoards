VIDEO_RETURN:				;Most (but not all) routines finish up here
	POP	DI			;Remove the "extra AX on stack"	
VIDEO_RETURN1:
	POP	BP		
	POP	DI
	POP	SI
	POP	BX
M15:	POP	CX
