;	BINARY OUTPUT			;Send what is in [al] in bits
AL_BINOUT:				;No registers altered (except AL)
	push	cx
	mov	cx,8
binout1: push	cx
	shl	al,1
	jb	bout1
	mov	cl,'0'
	push	ax
