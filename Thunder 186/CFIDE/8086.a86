;	HEXCHK				;check for a valid HEX DIGIT
HEX_check:	
	sub	al,'0'			;convert to binary if ok set carry if problem
	jb	hret
	cmp	al,0ah
	cmc	
	jnb	hret
	sub	al,7
	cmp	al,10
	jb	hret
	cmp	al,16
	cmc
hret:	ret



